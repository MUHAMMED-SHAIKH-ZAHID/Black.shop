<button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
    Add Coupon
</button>
</div>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="staticBackdropLabel">Add Coupen</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <div class="container">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <form class="mx-1 mx-md-4" id="myform1" action="/admin/register-coupons" method="post">


                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" name="name" id="name"
                                        placeholder="Coupon Name" />
                                    <label for="floatingInput">Coupon Name</label>
                                </div>

                                  <div class="form-floating mb-3">
                                    <input type="text" class="form-control" name="code" id="code"
                                        placeholder="Coupon Code" />
                                    <label for="floatingInput">Coupon Code</label>
                                </div>


                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" name="description" id="Username"
                                        placeholder="description" />
                                    <label for="floatingInput">Description</label>
                                </div>




                               


                                <div class="form-floating mb-2 mt-2">
                                    <input type="number" class="form-control" name="percentage" id="percentage"
                                        placeholder="Percentage" />
                                    <label for="floatingInput">Percentage</label>
                                </div>

                                   <div class="form-floating mb-2 mt-2">
                                    <input type="number" class="form-control" name="maximum" id="maximum"
                                        placeholder="Percentage" />
                                    <label for="floatingInput">Maximum Discount</label>
                                </div>

                          
                             
                                <div class="d-flex justify-content-center">
                                    <button type="submit" class="btn btn-dark mt-3 text-center">Submit</button>
                                </div>


                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<section>
    <div class="container-fluid">
        <div class="col-11 d-flex justify-content-center  mt-3 mb-2">

        </div>
    </div>

    <div class="table table-responsive w-100 d-block d-md-table">
        <table class="table table-dark table-striped table-hover mt-3" id="tablenew">
            <thead class="thead-dark" style="background-color:rgb(9, 9, 9); color: beige;">
                <tr>
                    <th scope="col">COUPON NAME</th>
                    <th scope="col">CODE</th>
                    <th scope="col">DISCRIPTION</th>
                    <th scope="col">PERCENTAGE</th>
                    <th scope="col">MAXIMUM</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                {{#each coupons}}
                <tr>

                    <td>{{this.name}}</td>
                    <td>{{this.code}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.percentage}}</td>
                    <td>{{this.maximum}}</td>
                    <td> <a href="/admin/update-Coupon/{{this._id}}" class="btn btn-secondary">Update</a> </td>
                    <td> <a  data-bs-toggle="modal" data-bs-target="#exampleModal{{this._id}}" class="btn btn-danger">Delete</a>
                   </td></tr>
               




<!-- Modal -->
<div class="modal fade" id="exampleModal{{this._id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
    
        
      <div class="modal-body">
        Are You Sure You Want To Remove product {{this.name}}
      </div>
      <div class="modal-footer">
        <a role="button" href="/admin/delete-coupon/{{this._id}}" class="btn btn-danger">Delete</a>
        <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Cancel</button>
        
      </div>
    </div>
  </div>
</div>
                 
 {{/each}}

            </tbody>
        </table>
    </div>


</section>
